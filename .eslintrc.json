{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-var-requires": 0,
      "no-var": "error",
      "spaced-comment": [
        "error",
        "always",
        {
          "exceptions": [
            "-",
            "+"
          ]
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "none",
          "singleQuote": true,
          "tabWidth": 2,
          "printWidth": 80,
          "semi": false,
          "arrowParens": "avoid",
          "spacedComment": false,
          "endOfLine": "auto"
        }
      ]
  }
}